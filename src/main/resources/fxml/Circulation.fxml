<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.elms.controller.CirculationController"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="bookTable" layoutY="50.0" layoutX="25.0" prefHeight="300.0" prefWidth="550.0">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="180.0"/>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="180.0"/>
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="180.0"/>
        </columns>
    </TableView>

    <TextField fx:id="searchField" layoutX="25.0" layoutY="10.0" promptText="Search by title" prefWidth="200.0"/>
    <Button fx:id="searchButton" layoutX="240.0" layoutY="10.0" text="Search" onAction="#handleSearch"/>

</AnchorPane>
