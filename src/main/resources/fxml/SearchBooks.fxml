<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elms.controller.SearchBooksController">
    <children>
        <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="200.0" />
        <Button layoutX="220.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
        <Button layoutX="290.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleSearchByAuthor" text="Search by Author" />
        <TableView fx:id="bookTable" layoutX="14.0" layoutY="45.0" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="200.0" text="Author" />
                <TableColumn fx:id="genreColumn" prefWidth="200.0" text="Genre" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
