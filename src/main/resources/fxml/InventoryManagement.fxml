<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elms.controller.InventoryManagementController">

<children>
    <TableView fx:id="inventoryTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="580.0">
        <columns>
            <TableColumn fx:id="bookIdColumn" prefWidth="290.0" text="Book ID" />
            <TableColumn fx:id="stockColumn" prefWidth="290.0" text="Stock" />
        </columns>
    </TableView>
    <TextField fx:id="bookIdField" layoutX="14.0" layoutY="240.0" promptText="Book ID" />
    <TextField fx:id="stockField" layoutX="150.0" layoutY="240.0" promptText="Stock" />
    <Button fx:id="updateInventoryButton" layoutX="300.0" layoutY="240.0" mnemonicParsing="false" text="Update Inventory" onAction="#handleUpdateInventory" />
    <TextField fx:id="searchBookIdField" layoutX="14.0" layoutY="280.0" promptText="Search Book ID" />
    <Button fx:id="searchStockButton" layoutX="150.0" layoutY="280.0" mnemonicParsing="false" text="Search Stock" onAction="#handleSearchStock" />
    <Button fx:id="addNewInventoryButton" layoutX="400.0" layoutY="240.0" mnemonicParsing="false" text="Add New Inventory" onAction="#handleAddNewInventory" />
</children>
</AnchorPane>